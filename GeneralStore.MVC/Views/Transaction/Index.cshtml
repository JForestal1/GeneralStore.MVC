@model IEnumerable<GeneralStore.MVC.Models.Transaction>

@{
    ViewBag.Title = "Index";
}

<h2>List of Customers</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.customer.FullName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.product.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SaleAmount)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.customer.FullName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.product.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Quantity)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.SaleAmount)
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.TransactionId }) |
        @Html.ActionLink("Details", "Details", new { id = item.TransactionId }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.TransactionId })
    </td>
</tr>
}

</table>
